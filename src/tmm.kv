<OverlayInterface>:
	orientation : 'vertical'

<PlayButton>:
	text: "Play"
	
<StatusBar>:
	Button:
		id: home
		text: "Home"
		value: "home"
		on_press: root.interface.show(args[0])
	PlayButton:
		id: playpause
	StatusLabel:
		id: status

<PlayList>
    viewclass: 'Label'
    RecycleBoxLayout:
        default_size: None, dp(56)
        default_size_hint: 1, None
        size_hint_y: None
        height: self.minimum_height
        orientation: 'vertical'

<HomeScreen>:
	cols: 2
	rows: 2
	Button:
		id: librarybutton
		value: "library"
		text: "Library"
		on_press: root.interface.show(args[0])
	Button:
		id: radiobutton
		value: "radio"
		text: "Radio"
		on_press: root.interface.show(args[0])
	Button:
		id: spotifybutton
		value: "spotify"
		text: "Spotify"
		on_press: root.interface.show(args[0])
	Button:
		text: "Random Button"

<ArtworkSlider>
	viewclass: 'Album'
	RecycleGridLayout:
		cols : 3
        default_size: None, root.height/2
        default_size_hint: 1, None
        size_hint_y: None
        height: self.minimum_height
        
<Album>
	orientation : 'vertical'
	AsyncImage:
		id : cover
	Label:
		id : title
		halign : 'center'
		valign : 'center'
		size_hint: 1, 0.1
		text_size : self.size	

<LibraryScreen>:
	orientation : 'vertical'
	BoxLayout:
		size_hint: 1, 0.05
		TextInput:
			id: searchinput
		Button:
			id: searchbutton
			text: "Search"
			on_press: root.search()
	ArtworkSlider:
		id: result

<RadioScreen>:
    viewclass: 'RadioButton'
    RecycleBoxLayout:
        default_size: None, dp(56)
        default_size_hint: 1, None
        size_hint_y: None
        height: self.minimum_height
        orientation: 'vertical'
        
